<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:orientation="vertical">    <ir.gonabad.taskmanagment.presentation.cviews.TextViewMedium        android:id="@+id/tv_btmDatePicker"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="center"        android:text="تاریخ"        android:textSize="17sp"        android:layout_marginTop="30dp"/>    <LinearLayout        android:id="@+id/ll_selectDay"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginHorizontal="25dp"        android:orientation="horizontal"        android:layout_marginTop="28dp">        <com.shawnlin.numberpicker.NumberPicker            android:id="@+id/np_btmDatepicker_day"            android:layout_weight="1"            android:layout_width="match_parent"            android:layout_height="wrap_content"            app:np_selectedTextSize="20sp"            app:np_dividerThickness="1dp"            app:np_dividerColor="?colorPrimary"            app:np_textColor="?android:textColor"            app:np_textSize="20sp"/>        <com.shawnlin.numberpicker.NumberPicker            android:id="@+id/np_btmDatepicker_month"            android:layout_weight="1"            android:layout_width="match_parent"            android:layout_height="wrap_content"            app:np_selectedTextSize="20sp"            app:np_textSize="20sp"            app:np_dividerThickness="1dp"            app:np_dividerColor="?colorPrimary"            app:np_textColor="?android:textColor"            />        <com.shawnlin.numberpicker.NumberPicker            android:id="@+id/np_btmDatepicker_year"            android:layout_weight="1"            android:layout_width="match_parent"            android:layout_height="wrap_content"            app:np_selectedTextSize="20sp"            app:np_dividerThickness="1dp"            app:np_dividerColor="?colorPrimary"            app:np_textColor="?android:textColor"            app:np_textSize="20sp" />    </LinearLayout>    <com.google.android.material.button.MaterialButton        android:id="@+id/btn_btmDatepicker_apply"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="@string/confirm"        android:layout_marginHorizontal="25dp"        android:layout_marginTop="30dp"        style="@style/ApplyButton"        android:textSize="15sp"        android:padding="10dp"/></LinearLayout>