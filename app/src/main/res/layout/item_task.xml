<?xml version="1.0" encoding="utf-8"?><androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:textDirection="rtl"    android:layoutDirection="rtl">    <com.google.android.material.card.MaterialCardView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginHorizontal="20dp"        android:layout_marginTop="3dp"        android:layout_marginBottom="7dp"        app:cardCornerRadius="15dp"        app:cardElevation="2dp"        android:backgroundTint="?backgroundCard">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:paddingVertical="15dp"            android:orientation="vertical">            <ir.gonabad.taskmanagment.presentation.cviews.TextViewBold                android:id="@+id/tv_itemCategory_title"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="نام تسک"                android:textSize="15sp"                android:drawableStart="@drawable/ic_circle"                android:drawableTint="@color/yellow"                android:drawablePadding="10dp"                android:layout_marginStart="15dp"/>            <ir.gonabad.taskmanagment.presentation.cviews.TextViewMedium                android:id="@+id/tv_itemCategory_status"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="وضعیت تسک"                android:textSize="12sp"                android:layout_marginTop="15dp"                android:layout_marginHorizontal="15dp"/>            <ir.gonabad.taskmanagment.presentation.cviews.TextViewMedium                android:id="@+id/tv_itemCategory_description"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="توضیحات تسک "                android:textSize="12sp"                android:layout_marginTop="5dp"                android:layout_marginHorizontal="15dp"/>            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:orientation="horizontal"                android:layout_marginTop="10dp"                android:layout_marginHorizontal="15dp">                <ir.gonabad.taskmanagment.presentation.cviews.TextViewMedium                    android:id="@+id/tv_itemCategory_createDate"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="تاریخ ایجاد"                    android:textSize="12sp"/>                <View                    android:layout_width="1dp"                    android:layout_height="match_parent"                    android:backgroundTint="@color/gray_dark"                    android:layout_margin="5dp"/>                <ir.gonabad.taskmanagment.presentation.cviews.TextViewMedium                    android:id="@+id/tv_itemCategory_endDate"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="تاریخ پایان"                    android:textSize="12sp"/>            </LinearLayout>        </LinearLayout>        <ImageView            android:id="@+id/iv_itemTask_menu"            android:layout_width="30dp"            android:layout_height="30dp"            android:src="@drawable/ic_menu"            android:padding="5dp"            android:background="?selectableItemBackgroundBorderless"            android:layout_gravity="top|end"            android:layout_margin="15dp"/>    </com.google.android.material.card.MaterialCardView></androidx.coordinatorlayout.widget.CoordinatorLayout>